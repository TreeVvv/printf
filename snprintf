#include <stdio.h>
#include <stdarg.h>

int _printf(const char *format, ...) {
    va_list args;
    va_start(args, format);

    int char_count = 0;
    char current_char;

    while ((current_char = *format) != '\0') {
        if (current_char != '%') {
            putchar(current_char);
            char_count++;
        } else {
            format++; // Move to the character after '%'
            switch (*format) {
                case 'c': {
                    char c = va_arg(args, int); // Get the next argument as a char
                    putchar(c);
                    char_count++;
                    break;
                }
                case 's': {
                    char *str = va_arg(args, char *); // Get the next argument as a string
                    for (int i = 0; str[i] != '\0'; i++) {
                        putchar(str[i]);
                        char_count++;
                    }
                    break;
                }
                case 'd':
                case 'i': {
                    int num = va_arg(args, int); // Get the next argument as an integer
                    printf("%d", num); // Print the integer using printf
                    char_count += snprintf(NULL, 0, "%d", num); // Count the characters printed
                    break;
                }
                case '%': {
                    putchar('%');
                    char_count++;
                    break;
                }
                default:
                    // Handle unsupported format specifiers here
                    putchar('%');
                    putchar(*format);
                    char_count += 2;
                    break;
            }
        }

        format++;
    }

    va_end(args);
    return char_count;
}

int main() {
    int num = 42;
    char c = 'A';
    char *str = "Hello, World!";
    int count = _printf("Character: %c, String: %s, Percentage: %%, Integer: %d\n", c, str, num);
    printf("Total characters printed: %d\n", count);
    return 0;
}
